{
  "mcpServers": {
    "content-capture": {
      "command": "npx",
      "args": ["tsx", "mcps/content-capture-mcp/src/index.ts"],
      "env": {
        "CONTENT_CAPTURE_API_URL": "${CONTENT_CAPTURE_API_URL}",
        "CONTENT_CAPTURE_API_KEY": "${CONTENT_CAPTURE_API_KEY}"
      }
    },
    "obsidian-vault": {
      "command": "npx",
      "args": ["tsx", "mcps/obsidian-vault-mcp/src/index.ts"],
      "env": {
        "OBSIDIAN_VAULT_PATH": "${OBSIDIAN_VAULT_PATH:-~/documents/mobile vault}"
      }
    },
    "notion-workspace": {
      "command": "npx",
      "args": ["tsx", "mcps/notion-workspace-mcp/src/index.ts"],
      "env": {
        "NOTION_API_TOKEN": "${NOTION_API_TOKEN}"
      }
    },
    "multi-repo": {
      "command": "npx",
      "args": ["tsx", "mcps/multi-repo-mcp/src/index.ts"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    }
  }
}
